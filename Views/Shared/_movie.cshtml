@model Movie

<div class="card mb-3">
    <div class="row">
        <div class="col-md-3">
            <img src="/img/@Model.ImageUrl" alt="@Model.Title">
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p>
                    <a href="/movies/details/@Model.MovieId" class="btn btn-success" >Detail</a>
                </p>
                </p>
            </div>
        </div>
    </div>
</div>
