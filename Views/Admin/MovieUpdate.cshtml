@model AdminEditMovieViewModel

<h1>Edit Movie</h1>
<hr/>


<div class="row">
    <div class="col-md-8">
        <form method="post" asp-controller="Admin" asp-action="MovieUpdate">
            <input type="hidden" name="MovieId" value="@Model.MovieId" />
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control" value="@Model.Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl">ImageUrl</label>
                <input asp-for="ImageUrl" class="form-control" value="@Model.ImageUrl" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-md-4">

        @foreach (var item in (List<Genre>)ViewBag.Genres)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="genre_@(item.GenreId)" 
                       @(Model.SelectedGenres.Any(g => g.GenreId == item.GenreId)?"checked":"")>
                <label class="form-check-label" for="genre_@(item.GenreId)">
                     @item.Name
                </label>
            </div>
        }



    </div>
</div>





