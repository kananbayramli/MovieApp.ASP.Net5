@model Movie

<div class="card">
    <div class="row">
        <div class="col-md-3">
            <img src="/img/@Model.ImageUrl" class="card-img" />
        </div>

        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">@Model.Director</p>
                <p>
                    <ul>
                        @foreach (var acter in Model.Acters)
                        {
                            <li>@acter</li>
                        }
                    </ul>
                </p>
            </div>
        </div>
    </div>
</div>